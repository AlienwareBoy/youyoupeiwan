.index {
  padding-top: 45rpx;
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0rpx;
  top: 0rpx;
}

.container {
  margin: 0 50rpx;
  height: 100%;
}

.indicatorDots {
  position: relative;
  height: 56rpx;
  margin-top: 30rpx;
  justify-content: space-between;
}

.DotsItem {
  flex: 1;
  text-align: center;
  position: relative;
  height: 60rpx;
}

.DotsItem text:nth-child(1) {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 600;
  line-height: 42rpx;
}

.DotsItem text:nth-child(2) {
  width: 70rpx;
  height: 10rpx;
  background: linear-gradient(180deg, rgba(79, 203, 255, 1) 0%, rgba(39, 155, 255, 1) 100%);
  border-radius: 5rpx;
  position: absolute;
  left: 50rpx;
  bottom: 0rpx;
}

.scrollViewStyle {
  padding-top: 20rpx;
  height: 100%;
}

.swiperItem {
  height: 100%;
}

.orderList {
  height: 100%;
}

.orderCom {
  padding: 20rpx 30rpx;
  position: relative;
  height: 100%;
}

.orderItem {
  min-height: 276rpx;
  max-height: 386rpx;
  height: 276rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2rpx 10rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 30rpx;
  margin: 20rpx 30rpx;
}

.orderId {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 42rpx;
}

.userInfo {
  margin-top: 10rpx;
}

.userInfo text {
  color: #3f4b55;
  opacity: 0.5;
  font-size: 15rpx;
  font-family: PingFangSC;
  font-weight: 600;
  line-height: 21rpx;
  margin-right: 30rpx;
}

.borderStyle {
  width: 20rpx;
  height: 20rpx;
  background: linear-gradient(180deg, rgba(79, 203, 255, 1) 0%, rgba(39, 155, 255, 1) 100%);
  border-radius: 50%;
  display: inline-block;
  margin-right: 10rpx !important;
}

.price {
  position: absolute;
  right: 34rpx;
  top: 34rpx;
}

.price text:nth-child(1) {
  font-size: 50rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  display: block;
}

.price text:nth-child(2) {
  font-size: 25rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
}

.operation {
  position: absolute;
  right: 30rpx;
  bottom: 73rpx;
}

.commonBtn {
  justify-content: center;
  width: 90rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(159, 165, 170, 1);
  font-size: 15rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 21rpx;
  margin-right: 15rpx;
}

.isClick {
  color: rgba(63, 75, 85, 1);
}

.noClick {
  color: rgba(63, 75, 85, 0.5);
}
