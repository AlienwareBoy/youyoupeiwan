.bground {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 100%;
}

.index {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0rpx;
  top: 0rpx;
}

.content {
  position: relative;
  z-index: 500;
  margin: 0 50rpx;
}

.content {
  padding-top: 87rpx;
  position: relative;
  height: 100%;
}

.Edit {
  background: linear-gradient(180deg, rgba(79, 203, 255, 1) 0%, rgba(39, 155, 255, 1) 100%);
  padding: 10rpx 20rpx;
  position: absolute;
  right: 0rpx;
  top: 52rpx;
  width: 45rpx;
  border-radius: 10rpx;
}

.Edit text:nth-child(1) {
  font-size: 20rpx;
  color: #fff;
  line-height: 28rpx;
}

.title {
  font-size: 20rpx;
  color: rgba(159, 165, 170, 1);
  line-height: 28rpx;
}

.gameItem {
  width: 130rpx;
  height: 60rpx;
  background: #e9e9e9;
  border-radius: 10px;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  justify-content: center;
}

.gameList {
  flex-wrap: wrap;
  margin-top: 15rpx;
}

.gameItem text {
  font-size: 20rpx;
  font-family: PingFangSC;
  font-weight: 600;
  line-height: 28rpx;
  color: #9fa5aa;
}

.isClickgame {
  background: linear-gradient(180deg, rgba(79, 203, 255, 1) 0%, rgba(39, 155, 255, 1) 100%);
}

.noClickgame {
  background: rgba(233, 233, 233, 1);
}

.noGame {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 500rpx;
  height: 300rpx;
  justify-content: center;
  border: 5rpx solid rgba(179, 222, 231, 1);
  border-radius: 15rpx;
  font-size: 25rpx;
}

.noGame  text {
  color: #ccc !important;
}

.bgAdd {
  background: linear-gradient(180deg, rgba(79, 203, 255, 1) 0%, rgba(39, 155, 255, 1) 100%);
}

.bgAdd text {
  color: #fff;
}

.delate {
  width: 15rpx;
  height: 15rpx;
  margin-left: 5rpx;
}

.PopTitle {
  font-size: 40rpx;
  font-weight: 600;
  color: #000;
  margin-top: 80rpx;
}

.grade_popup input {
  width: 525rpx;
  border-bottom: 3rpx solid #b3dee7;
  text-align: center;
  padding-bottom: 15rpx;
  margin-top: 50rpx;
}

.addGradeBtn {
  justify-content: center;
  width: 525rpx;
  height: 95rpx;
  background: linear-gradient(180deg, rgba(79, 203, 255, 0.6) 0%, rgba(39, 155, 255, 0.6) 100%);
  border-radius: 10rpx;
  margin-top: 50rpx;
}

.addGradeBtn text {
  color: #fff;
}
