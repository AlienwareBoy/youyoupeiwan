.index {
  padding-top: 45rpx;
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0rpx;
  top: 0rpx;
}

.container {
  margin: 0 50rpx;
  height: 100%;
}

.indicatorDots {
  position: relative;
  height: 56rpx;
  margin-top: 30rpx;
  justify-content: space-between;
}

.DotsItem {
  text-align: center;
  position: relative;
  height: 60rpx;
}

.DotsItem text:nth-child(1) {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 42rpx;
}

.DotsItem text:nth-child(2) {
  width: 100%;
  height: 10rpx;
  background: linear-gradient(180deg, rgba(79, 203, 255, 1) 0%, rgba(39, 155, 255, 1) 100%);
  border-radius: 5rpx;
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
}

.scrollViewStyle {
  padding-top: 20rpx;
  height: 100%;
}

.swiperItem {
  height: 100%;
}

.orderList {
  height: 100%;
}

.orderItem {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2px 10px 0px rgba(42, 158, 255, 0.18);
  border-radius: 30rpx;
  margin: 20rpx 30rpx 0rpx 30rpx;
}

.userInfo {
  margin-top: 10rpx;
}

.userInfo text {
  background: linear-gradient(180deg, rgba(79, 203, 255, 1) 0%, rgba(39, 155, 255, 1) 100%);
  color: #fff;
  font-size: 15rpx;
  font-family: PingFangSC;
  font-weight: 600;
  line-height: 21rpx;
  margin-right: 30rpx;
  padding: 5rpx;
  border-radius: 5rpx 10rpx;
}

.borderStyle {
  width: 20rpx;
  height: 20rpx;
  background: linear-gradient(180deg, rgba(79, 203, 255, 1) 0%, rgba(39, 155, 255, 1) 100%);
  border-radius: 50%;
  display: inline-block;
  margin-right: 10rpx !important;
}

.price {
  position: absolute;
  right: 34rpx;
  top: 34rpx;
}

.price text:nth-child(1) {
  font-size: 50rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  display: block;
}

.price text:nth-child(2) {
  font-size: 25rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
}

.operation {
  position: absolute;
  right: 30rpx;
  bottom: 73rpx;
}

.commonBtn {
  justify-content: center;
  width: 90rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(159, 165, 170, 1);
  font-size: 15rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 21rpx;
  margin-right: 15rpx;
}

/* pages/userOrderManagement/userOrderManagement.wxss */

.fixedBorder {
  margin: 0rpx 20rpx;
  padding: 30rpx 0rpx 12rpx 0rpx;
}

.gameName {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 42rpx;
  letter-spacing: 1px;
}

.orderDate {
  font-size: 18rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 25rpx;
}

.dataStyle {
  margin-top: 10rpx;
}

.fiexedMoney {
  position: absolute;
  right: 50rpx;
  top: 62rpx;
}

.fiexedMoney text:nth-child(1) {
  font-size: 50rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 70rpx;
}

.fiexedMoney text:nth-child(2) {
  font-size: 18rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 25rpx;
  display: block;
  text-align: right;
}

.changeBorder {
  border-top: 3rpx solid #e9e9e9;
  margin: 0 20rpx;
  padding-bottom: 30rpx;
}

.userAvater {
  width: 90rpx;
  height: 90rpx;
  border-radius: 10rpx;
  background: #ccc;
}

.itemList {
  margin-top: 15rpx;
}

.item {
  margin-bottom: 15rpx;
}

.item:last-child {
  margin-bottom: 0rpx;
}

.joinInfo {
  justify-content: flex-start;
  align-items: flex-start;
  height: 100%;
  margin-left: 25rpx;
}

.joinName {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 42rpx;
  letter-spacing: 1rpx;
}

.infoItem {
  position: relative;
}

.infoItem text:nth-child(1) {
  font-size: 18rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 0.5);
  line-height: 25rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 120rpx;
}

.infoItem text:nth-child(2) {
  font-size: 20rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 28rpx;
  margin-right: 98rpx;
}

.infoItem text:nth-child(3) {
  width: 160rpx;
  height: 45rpx;
  border-radius: 23rpx;
  border: 2rpx solid #4fcbff;
  font-size: 18rpx;
  font-family: PingFangSC-Semibold, PingFangSC;
  font-weight: 600;
  color: rgba(39, 155, 255, 1);
  justify-content: center;
}

.infoItem text:nth-child(4) {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 42rpx;
  letter-spacing: 1rpx;
  position: absolute;
  right: 0rpx;
  top: 25rpx;
}

