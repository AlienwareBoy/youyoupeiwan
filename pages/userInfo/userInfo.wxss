/* pages/userInfo/userInfo.wxss */

.userInfo {
  padding-top: 66rpx;
  
}

.userMsg {
  position: relative;
  margin: 0rpx 50rpx;
}

.bground {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 100%;
}

.userMsg image {
  width: 100rpx;
  height: 100rpx;
  background: rgba(216, 216, 216, 1);
  border-radius: 50%;
}

.userId text:nth-child(1) {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 600;
  margin-left: 20rpx;
  color: rgba(63, 75, 85, 1);
  line-height: 42rpx;
}

.userId text:nth-child(2) {
  background: linear-gradient(180deg, rgba(79, 203, 255, 1) 0%, rgba(39, 155, 255, 1) 100%);
  border-radius: 10rpx;
  font-size: 18rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 25rpx;
  padding: 0 20rpx;
  display: block;
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.edit {
  width: 80rpx;
  height: 40rpx;
  border: 2rpx solid #4fcbff;
  border-radius: 23rpx;
  position: absolute;
  right: 0rpx;
  top: 25rpx;
  font-size: 20rpx;
  color: rgba(63, 75, 85, 1);
  text-align: center;
  line-height: 40rpx;
}

.Form {
  margin: 0rpx 50rpx;
  margin-top: 74rpx;
  position: relative;
  z-index: 501;
  margin-bottom: 189rpx;
}

.formItem {
  border-bottom: 1rpx solid #b3dee7;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
}

.formCode {
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.formItem text:nth-child(1) {
}

.formItem text {
  font-size: 20rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 0.5);
  line-height: 28rpx;
  display: inline-block;
  min-width: 100rpx;
}

.formItem input {
  margin-left: 60rpx;
  font-size: 20rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 28rpx;
}

.UploadImage{
  width: 286rpx;
  height: 286rpx;
  background: rgba(233, 233, 233, 1);
  border-radius: 25px;
  display: block;
  margin-top: 30rpx;
}

.formCode text {
  font-size: 20rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: #279bff;
  line-height: 28rpx;
}

.code {
  display: inline-block !important;
}

.upload {
  border: 1px solid #4fcbff;
  position: absolute;
  border-radius: 10rpx;
  right: 159rpx;
  bottom: 44rpx;
  padding: 5rpx 10rpx;
}

.editBtn {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 98rpx;
  background: rgba(255, 255, 255, 1);
  border-top: 1rpx solid #f5f5f5;
  z-index: 501;
}

.editBtn text:nth-child(1) {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(39, 155, 255, 1);
  line-height: 42rpx;
  position: absolute;
  right: 353rpx;
  top: 32rpx;
}

.editBtn text:nth-child(2) {
  display: inline-block;
  font-size: 40rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  width: 299rpx;
  height: 100%;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  background: linear-gradient(180deg, rgba(79, 203, 255, 1) 0%, rgba(39, 155, 255, 1) 100%);
  text-align: center;
  line-height: 97rpx;
}
.labelIcon{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
  display: inline-block;
}