.header {
  width: 654rpx;
  height: 300rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  overflow: inherit;
}

.index {
  padding-top: 87rpx;
}

.headerBg {
  position: relative;
  height: 300rpx;
}

.leftBg {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
}

.rightBg {
  position: absolute;
  right: 0rpx;
  top: 0rpx;
}

.comColr {
  width: 38rpx;
  height: 261rpx;
}

.header .userName {
  font-size: 70rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 98rpx;
  text-shadow: 10rpx 10rpx 10rpx rgba(0, 0, 0, 0.2);
  position: absolute;
  left: 0rpx;
  top: -43rpx;
  z-index: 200;
}

.idborder {
  left: 300rpx !important;
}

.userAvater {
  width: 125rpx;
  height: 125rpx;
  border-radius: 50%;
  position: absolute;
  background: #ccc;
  left: 45rpx;
  top: 16rpx;
}

.userInfo {
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  width: 654rpx;
  height: 300rpx;
}

.Nameplate {
  background: rgba(255, 255, 255, 0.27);
  padding: 2rpx 14rpx;
  border: 1rpx solid #fff;
  position: absolute;
  z-index: 100;
  font-size: 15rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: #fff;
  left: 195rpx;
  top: 62rpx;
  border-radius: 15rpx;
  text-align: center;
  line-height: 24rpx;
}

.features {
  position: absolute;
  left: -25rpx;
  bottom: 20rpx;
  justify-content: space-between;
  padding: 0 90rpx;
}

.line {
  width: 6rpx;
  height: 92rpx;
  background: rgba(242, 242, 242, 1);
  border-radius: 3rpx;
  transform: rotate(15deg);
  margin-left: 127rpx;
}

.shareCode {
  margin-left: 125rpx;
}

.Myteam {
  position: relative;
  left: 20rpx;
}

.Myteam text:nth-child(1) {
  font-size: 50rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: #fff;
  line-height: 70rpx;
  display: block;
  margin-left: 14rpx;
  text-align: center;
}

.Myteam text:nth-child(2) {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: #fff;
  line-height: 42rpx;
}

.shareCode image {
  width: 41rpx;
  height: 41rpx;
  display: block;
}

.shareCode text {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: #fff;
  line-height: 42rpx;
  margin-top: 15rpx;
}

.comlyout {
  padding-bottom: 30rpx;
}

.userCenter {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2rpx 10rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 35rpx;
  margin: 0 50rpx;
  margin-top: 28rpx;
  padding-top: 35rpx;
}

.title {
  text-align: center;
  display: block;
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 42rpx;
}

.ModuleList {
  margin-top: 45rpx;
}

.moduleItem {
  border-left: 5rpx solid #f2f2f2;
  flex: 1;
}

.moduleItem:first-child {
  border-left: none;
  text-align: center;
}

.moduleItem text:nth-child(1) {
  font-size: 40rpx;
  font-family: PingFangSC;
  font-weight: 600;
  background-image: -webkit-linear-gradient(bottom, #fd8d5f, #fd8403, #f95431);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  display: block;
}

.moduleItem text:nth-child(2) {
  font-size: 20rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  margin-top: 10rpx;
}

.icon {
  width: 54rpx;
  height: 54rpx;
  display: block;
  margin: 0 auto;
}

.item {
  position: relative;
  margin-top: 50rpx;
}

.item:last-child {
  margin-bottom: 50rpx;
}

.itemIcon {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
}

.arraw {
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
}

.itemFont {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 42rpx;
  margin-left: 10rpx;
}

.itemList {
  margin: 0 50rpx;
}

.shareType {
  width: 100%;
  height: 327rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 5rpx 10rpx 0rpx rgba(0, 0, 0, 0.2);
  position: absolute;
  left: 0rpx;
  justify-content: space-around;
  transition: bottom 0.3s ease;
  bottom: -327rpx;
}

.showShare {
  bottom: 0rpx;
}

.closeShare {
  bottom: -327rpx;
}

.comShare image {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  display: block;
}

.comShare text:nth-child(2) {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 42rpx;
  margin-top: 15rpx;
}

/* Popup */

.Popup {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  padding-top: 50rpx;
}

.prompt {
  text-align: center;
}

.shareImgage {
  width: 488rpx;
  height: 330rpx;
  background: rgba(235, 235, 235, 1);
  margin: 0 35rpx;
  margin-top: 24rpx;
}

.saveShareImage {
  height: 100rpx;
  width: 100%;
  border-top: 1rpx solid #f5f5f5;
  align-items: center;
  justify-content: center;
  margin-top: 45rpx;
}

#mycanvas {
  width: 488rpx;
  height: 330rpx;
}

.ContentCanvas {
  position: fixed;
  top: -1000px;
  left: -1000px;
}
