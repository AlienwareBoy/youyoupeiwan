.item {
  width: 650rpx;
  height: 116rpx;
  border-bottom: 2rpx solid rgba(216, 216, 216, 1);
  margin-bottom: 25rpx;
}
.bground {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 100%;
}
.index {
  margin: 0 50rpx;
  padding-top: 46rpx;
}

.item image {
  width: 50rpx;
  height: 50rpx;
  background: rgba(216, 216, 216, 1);
  border-radius: 10rpx;
}

.joinUser {
  align-items: flex-start;
  margin-left: 15rpx;
}

.joinUser text:nth-child(1) {
  font-size: 25rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 1);
  line-height: 36rpx;
}

.joinUser text:nth-child(2) {
  font-size: 15rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(63, 75, 85, 0.5);
  line-height: 21rpx;
}
